<?xml version="1.0" encoding="utf-8"?>
<zhuiyun.xyz.viewinjects.MyRelativelayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="zhuiyun.xyz.viewinjects.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="5sp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:clickable="true"
        android:onClick="play"
        android:text="Hello World!sdfdsdgsdggsdgsdsgdsgsdgs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="changeText"
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</zhuiyun.xyz.viewinjects.MyRelativelayout>
